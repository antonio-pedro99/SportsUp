<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12sp"
    >

    <ImageView
        android:id="@+id/img_waiter_photo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/avatar" />

    <TextView
        android:id="@+id/txt_waiter_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="12dp"
        android:text="Waiter Name"
        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_waiter_photo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_waiter_photo"
        app:layout_constraintTop_toTopOf="@+id/img_waiter_photo" />
</androidx.constraintlayout.widget.ConstraintLayout>