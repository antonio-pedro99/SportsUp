<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/sports_yellow"
    android:layout_height="wrap_content"
    android:padding="12sp"
    >

    <ImageView
        android:id="@+id/img_player_photo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.98"
        app:srcCompat="@drawable/avatar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:orientation="vertical"
        android:background="@drawable/comment_background"
        app:layout_constraintBottom_toBottomOf="@+id/img_player_photo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toEndOf="@+id/img_player_photo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:padding="8sp"
        >

        <TextView
            android:id="@+id/event_comment_item_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:text="Date"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:textSize="10sp" />
        <TextView
            android:id="@+id/event_comment_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:text="Player Name"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            android:textSize="15sp"
            android:layout_marginBottom="5sp"
            />

        <TextView
            android:id="@+id/event_comment_item_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:text="Player Name"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:textSize="14sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>